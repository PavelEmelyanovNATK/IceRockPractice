<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IceRockPractice" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorBackground">@color/git_dark_blue</item>
        <item name="colorPrimary">@color/git_pale_dark_blue</item>
        <item name="colorPrimaryVariant">@color/git_pale_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/git_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/git_gray</item>
        <item name="colorError">@color/git_red</item>
        <item name="colorAccent">@color/git_green</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="alertDialogStyle">@style/IceRockAlertDialog</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.IceRockPractice.SplashScreen" parent="Theme.IceRockPractice">
        <item name="android:windowBackground">@drawable/bg_splashscreen</item>
    </style>
</resources>